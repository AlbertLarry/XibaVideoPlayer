<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/demo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:text="播放"/>

    <Button
        android:id="@+id/back_to_normal_BN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:text="返回"/>

    <Button
        android:id="@+id/lock_screen_BN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:text="锁屏"/>

    <RelativeLayout
        android:id="@+id/full_screen_bottom_container_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:text="00:00"/>

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:text="00:00"/>

        <SeekBar
            android:id="@+id/demo_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/total_time"
            android:layout_toRightOf="@id/current_time"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/position_changing_info_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/infoWindowBG"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/full_screen_volume_bright_LL"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/infoWindowBG"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/full_screen_volume_bright_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="音量"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <SeekBar
            android:id="@+id/full_screen_volume_bright_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:thumb="@android:color/transparent"
            android:progress="50"
            android:max="100"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/full_screen_loading_PB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>