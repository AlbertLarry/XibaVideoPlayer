<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.axiba.xibavideoplayer.sample.MainActivity">


    <Button
        android:id="@+id/xiba_sample_demo_BN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="XibaVideoPlayer Sample Demo"/>


    <Button
        android:id="@+id/list_demo_BN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="List Demo"/>

    <Button
        android:id="@+id/recyclerview_demo_BN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="RecyclerView Demo"/>

    <Button
        android:id="@+id/viewpager_demo_BN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ViewPager Demo"/>

    <Button
        android:id="@+id/pager_with_list_BN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Pager With List Demo"/>

    <Button
        android:id="@+id/pager_with_recycler_BN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Pager With Recycler Demo"/>
</LinearLayout>
